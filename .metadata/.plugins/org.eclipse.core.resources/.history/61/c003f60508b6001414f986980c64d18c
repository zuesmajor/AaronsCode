import java.awt.Graphics2D;


public class Leg extends Drawable {
	int angle;
	int length;

	public Leg() {
		angle = random.nextInt(30);
		length = random.nextInt(20)+10;
	}
	
	@Override
	public void draw(Graphics2D g2d) {
		g2d.drawLine(
				(int)(position.getX()),
				(int)(position.getY()),
				(int)(position.getX() + Math.cos(angle) * length),
				(int)(position.getY() + Math.sin(angle) * length)
		);
	}
}
