import java.awt.Graphics2D;


public class Leg extends Drawable {
	int angle;
	int length;

	public Leg() {
		angle = random.nextInt(30) + 10;
		length = random.nextInt(20)+10;
	}
	
	@Override
	public void draw(Graphics2D g2d) {
		System.out.println(position);
		g2d.drawLine(
				(int)(position.getX()),
				(int)(position.getY()),
				(int)(position.getX() + Math.cos((double)(angle + 75)/180*Math.PI) * length),
				(int)(position.getY() + Math.sin((double)(angle + 75)/180*Math.PI) * length)
		);
	}
}
